{
    "name": "addiks/more-php-cs-fixers",
    "license": "MIT",
    "type": "library",
    "description": "Extension for PHP-CS-Fixer with more fixers",

    "autoload": {
        "psr-4": {
            "Addiks\\MorePhpCsFixers\\Tests\\Unit\\": "tests/unit/",
            "Addiks\\MorePhpCsFixers\\": "php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpCsFixer\\Tests\\": "vendor/friendsofphp/php-cs-fixer/tests/"
        }
    },

    "require": {
        "php": ">=7.4",
        "webmozart/assert": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "infection/infection": "*",
        "vimeo/psalm": "^4.4",
        "phpstan/phpstan": "^0.12.31",
        "phpspec/prophecy": "^1.15",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunitgoodpractices/polyfill": "^1.5",
        "phpunitgoodpractices/traits": "^1.9.1",
        "php-cs-fixer/accessible-object": "^1.1",
        "php-cs-fixer/phpunit-constraint-isidenticalstring": "^1.2",
        "php-cs-fixer/phpunit-constraint-xmlmatchesxsd": "^1.2.1",
        "symfony/phpunit-bridge": "^6.0"
    },
    
    "config": {
        "preferred-install": {
            "friendsofphp/php-cs-fixer": "source",
            "*": "dist"
        }
    }
}
